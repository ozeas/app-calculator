{
  "name": "calculator_app",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "scripts": {
    "bootstrap": "yarn lerna bootstrap",
    "build": "yarn lerna run build",
    "build:app": "yarn workspace app build",
    "build:components": "yarn workspace @ac/components build",
    "compile": "yarn lerna run compile --stream",
    "dev:app": "yarn workspace app dev",
    "dev:components": "yarn workspace @ac/components dev",
    "lint": "yarn eslint . --ext .ts,.tsx",
    "test": "yarn lerna run test",
    "test:app": "yarn workspace app test",
    "test:components": "yarn workspace @ac/components test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "pretty-quick": "^3.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "lint-staged": {
    "**/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "pretty-quick --check"
    ]
  }
}
