{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": ["lib/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "lib/**/*.stories.tsx",
    "lib/**/*.test.tsx"
  ]
}
