{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "lib": ["dom.iterable", "dom", "es2016", "es2017", "es6", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "incremental": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["lib/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "lib/**/*.stories.tsx",
    "lib/**/*.test.tsx"
  ]
}
